---
// Project Evaluation Section Component - Project evaluation interface
---

<section id="project-evaluation" class="project-evaluation-section">
  <div class="container">
    <div class="content-layout">
      <div class="process-column">
        <div class="process-grid">
          <div class="process-card">
            <div class="process-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"/>
                <path d="M9 12l2 2 4-4"/>
              </svg>
            </div>
            <span class="process-text">Objetivo</span>
          </div>
          
          <div class="process-card">
            <div class="process-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M12 9v3.75m-9.303 3.376c-.866 1.5.217 3.374 1.948 3.374h14.71c1.73 0 2.813-1.874 1.948-3.374L13.949 3.378c-.866-1.5-3.032-1.5-3.898 0L2.697 16.126zM12 15.75h.007v.008H12v-.008z"/>
              </svg>
            </div>
            <span class="process-text">Problemas</span>
          </div>
          
          <div class="process-card">
            <div class="process-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"/>
              </svg>
            </div>
            <span class="process-text">Solución</span>
          </div>
          
          <div class="process-card">
            <div class="process-icon">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
                <line x1="16" y1="2" x2="16" y2="6"/>
                <line x1="8" y1="2" x2="8" y2="6"/>
                <line x1="3" y1="10" x2="21" y2="10"/>
              </svg>
            </div>
            <span class="process-text">Planificación</span>
          </div>
        </div>
      </div>
      
      <div class="content-column">
        <h2 class="project-title">Evalúa tus Proyectos con AI</h2>
        <p class="project-subtitle">Todos los caminos llegan a Roma, pero no todos los caminos son iguales</p>
        <button class="project-eval-button">
          <span class="eval-text">Evaluar mis proyectos ></span>
        </button>
      </div>
    </div>
  </div>
</section>

<style>
  .project-evaluation-section {
    padding: 5rem 0;
    background: #fff;
    position: relative;
    overflow: hidden;
    margin: 7rem 0;
  }

  .container {
    max-width: 90%;
    margin: 0 auto;
    padding: 0 2rem;
  }

  @media (min-width: 1400px) {
    .container {
      max-width: 90%;
    }
  }

  .content-layout {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 5rem;
    align-items: center;
  }

  .process-column {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .process-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    max-width: 400px;
  }

  .process-card {
    background: #fff;
    border: 2px solid #333;
    border-radius: 12px;
    padding: 2rem 1.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    min-height: 120px;
    transition: all 0.3s ease;
    position: relative;
    will-change: transform;
    backface-visibility: hidden;
    cursor: pointer;
    gap: 0.75rem;
  }

  .process-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .process-icon {
    width: 2.5rem;
    height: 2.5rem;
    margin-bottom: 0.5rem;
    transition: transform 0.3s ease;
  }

  .process-icon svg {
    width: 100%;
    height: 100%;
    stroke: #000;
    transition: stroke 0.3s ease;
  }

  .process-card:hover .process-icon {
    transform: scale(1.1);
  }

  .process-card:hover .process-icon svg {
    stroke: #ef1d27;
  }

  .process-text {
    font-size: clamp(1rem, 2vw, 1.2rem);
    font-weight: 700;
    color: #ef1d27;
    line-height: 1.3;
  }

  .content-column {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
    gap: 2rem;
  }

  .project-title {
    font-size: clamp(3rem, 4vw, 4rem);
    font-weight: 900;
    text-align: left;
    margin: 0;
    color: #000;
    letter-spacing: -0.08em;
    line-height: 1.1;
  }

  .project-subtitle {
    font-size: clamp(1.5rem, 2vw, 1.8rem);
    font-weight: 400;
    color: #000;
    line-height: 1.4;
    margin: 0;
    text-align: left;
    font-style: italic;
  }

  .project-eval-button {
    background: linear-gradient(135deg, #ef1d27, #f26168);
    border: 1px solid #ef1d27;
    border-radius: 100px;
    padding: 1rem 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    cursor: pointer;
    box-shadow: 0 2px 8px rgba(248, 6, 6, 0.1);
    align-self: flex-start;
  }

  .project-eval-button:hover {
    background: #d41e2a;
    transform: scale(1.05);
  }

  .eval-text {
    font-size: 1.1rem;
    font-weight: 700;
    color: #fff;
  }

  /* Responsive Design */
  @media (max-width: 1023px) {
    .content-layout {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .process-column {
      order: 2;
    }

    .content-column {
      order: 1;
      align-items: center;
      text-align: center;
    }

    .project-title {
      text-align: center;
    }

    .project-subtitle {
      text-align: center;
    }

    .process-grid {
      max-width: 100%;
    }
  }

  @media (max-width: 767px) {
    .project-evaluation-section {
      padding: 4rem 0;
    }

    .process-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .process-card {
      min-height: 100px;
      padding: 1.5rem 1rem;
    }
  }

  @media (max-width: 480px) {
    .project-evaluation-section {
      padding: 3rem 0;
    }

    .project-title {
      font-size: clamp(2rem, 5vw, 3rem);
    }

    .process-card {
      min-height: 80px;
      padding: 1rem 0.75rem;
    }

    .process-text {
      font-size: clamp(0.9rem, 3vw, 1rem);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const evalButton = document.querySelector('.project-eval-button');
    
    if (evalButton) {
      evalButton.addEventListener('click', () => {
        // Navigate to project evaluation page or scroll to next section
        console.log('Project evaluation button clicked');
        // You can add navigation logic here
        // For example: window.location.href = '/project-evaluation';
      });
    }

    // Add click handlers for process cards
    const processCards = document.querySelectorAll('.process-card');
    
    processCards.forEach(card => {
      card.addEventListener('click', function(this: HTMLElement) {
        // Remove active class from all cards
        processCards.forEach(c => c.classList.remove('active'));
        
        // Add active class to clicked card
        this.classList.add('active');
        
        // Get the process step
        const processText = this.querySelector('.process-text')?.textContent;
        console.log('Selected process:', processText);
      });
    });
  });
</script>
