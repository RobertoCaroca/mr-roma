---
// Project Evaluation Section Component - Project evaluation interface
---

<section id="project-evaluation" class="project-evaluation-section">
  <div class="container">
    <div class="content-layout">
      <div class="process-column">
        <div class="process-grid">
          <div class="process-card">
            <span class="process-text">Objetivo</span>
          </div>
          
          <div class="process-card">
            <span class="process-text">Problemas</span>
          </div>
          
          <div class="process-card">
            <span class="process-text">Solución</span>
          </div>
          
          <div class="process-card">
            <span class="process-text">Planificación</span>
          </div>
        </div>
      </div>
      
      <div class="content-column">
        <h2 class="project-title">Evalúa tus Proyectos con AI</h2>
        <p class="project-subtitle">Todos los caminos llegan a Roma, pero no todos los caminos son iguales</p>
        <button class="project-eval-button">
          <span class="eval-text">Evaluar mis proyectos ></span>
        </button>
      </div>
    </div>
  </div>
</section>

<style>
  .project-evaluation-section {
    padding: 6rem 0;
    background: #fff;
    position: relative;
    overflow: hidden;
  }

  .container {
    max-width: 90%;
    margin: 0 auto;
    padding: 0 2rem;
  }

  @media (min-width: 1400px) {
    .container {
      max-width: 90%;
    }
  }

  .content-layout {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 5rem;
    align-items: center;
  }

  .process-column {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .process-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1.5rem;
    max-width: 400px;
  }

  .process-card {
    background: #fff;
    border: 2px solid #333;
    border-radius: 12px;
    padding: 2rem 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    text-align: center;
    min-height: 120px;
    transition: all 0.3s ease;
    position: relative;
    will-change: transform;
    backface-visibility: hidden;
    cursor: pointer;
  }

  .process-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .process-text {
    font-size: clamp(1rem, 2vw, 1.2rem);
    font-weight: 700;
    color: #ef1d27;
    line-height: 1.3;
  }

  .content-column {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: center;
    gap: 2rem;
  }

  .project-title {
    font-size: clamp(3rem, 4vw, 4rem);
    font-weight: 900;
    text-align: left;
    margin: 0;
    color: #000;
    letter-spacing: -0.08em;
    line-height: 1.1;
  }

  .project-subtitle {
    font-size: clamp(1.5rem, 2vw, 1.8rem);
    font-weight: 400;
    color: #000;
    line-height: 1.4;
    margin: 0;
    text-align: left;
    font-style: italic;
  }

  .project-eval-button {
    background: linear-gradient(135deg, #ef1d27, #f26168);
    border: 1px solid #ef1d27;
    border-radius: 100px;
    padding: 1rem 2rem;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.3s ease;
    cursor: pointer;
    box-shadow: 0 2px 8px rgba(248, 6, 6, 0.1);
    align-self: flex-start;
  }

  .project-eval-button:hover {
    background: #d41e2a;
    transform: scale(1.05);
  }

  .eval-text {
    font-size: 1.1rem;
    font-weight: 700;
    color: #fff;
  }

  /* Responsive Design */
  @media (max-width: 1023px) {
    .content-layout {
      grid-template-columns: 1fr;
      gap: 3rem;
    }

    .process-column {
      order: 2;
    }

    .content-column {
      order: 1;
      align-items: center;
      text-align: center;
    }

    .project-title {
      text-align: center;
    }

    .project-subtitle {
      text-align: center;
    }

    .process-grid {
      max-width: 100%;
    }
  }

  @media (max-width: 767px) {
    .project-evaluation-section {
      padding: 4rem 0;
    }

    .process-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .process-card {
      min-height: 100px;
      padding: 1.5rem 1rem;
    }
  }

  @media (max-width: 480px) {
    .project-evaluation-section {
      padding: 3rem 0;
    }

    .project-title {
      font-size: clamp(2rem, 5vw, 3rem);
    }

    .process-card {
      min-height: 80px;
      padding: 1rem 0.75rem;
    }

    .process-text {
      font-size: clamp(0.9rem, 3vw, 1rem);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', () => {
    const evalButton = document.querySelector('.project-eval-button');
    
    if (evalButton) {
      evalButton.addEventListener('click', () => {
        // Navigate to project evaluation page or scroll to next section
        console.log('Project evaluation button clicked');
        // You can add navigation logic here
        // For example: window.location.href = '/project-evaluation';
      });
    }

    // Add click handlers for process cards
    const processCards = document.querySelectorAll('.process-card');
    
    processCards.forEach(card => {
      card.addEventListener('click', function() {
        // Remove active class from all cards
        processCards.forEach(c => c.classList.remove('active'));
        
        // Add active class to clicked card
        this.classList.add('active');
        
        // Get the process step
        const processText = this.querySelector('.process-text').textContent;
        console.log('Selected process:', processText);
      });
    });
  });
</script>
