---
// Goal Evaluation Section Component - Industry selection interface
---

<section id="goal-evaluation" class="goal-evaluation-section">
  <div class="container">
    <div class="content-layout">
      <div class="description-column">
        <div class="step-indicator">Paso 1</div>
        <h2 class="evaluation-title">Obten tu OKR o North Star con AI</h2>
        <p class="evaluation-subtitle">Selecciona tu industria para obtener tu OKR, North Star, <strong>Roma</strong> con AI:</p>
      </div>
      
      <div class="industry-column">
        <div class="industry-grid">
      <button class="industry-btn" data-industry="fintech">
        <div class="industry-icon">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="1" y="4" width="22" height="16" rx="2" ry="2"/>
            <line x1="1" y1="10" x2="23" y2="10"/>
          </svg>
        </div>
        <span class="industry-text">Fintech</span>
      </button>
      
      <button class="industry-btn" data-industry="ecommerce">
        <div class="industry-icon">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <circle cx="9" cy="21" r="1"/>
            <circle cx="20" cy="21" r="1"/>
            <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6"/>
          </svg>
        </div>
        <span class="industry-text">E-commerce</span>
      </button>
      
      <button class="industry-btn" data-industry="logistica">
        <div class="industry-icon">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <rect x="1" y="3" width="15" height="13"/>
            <polygon points="16,8 20,8 23,11 23,16 16,16"/>
            <circle cx="5.5" cy="18.5" r="2.5"/>
            <circle cx="18.5" cy="18.5" r="2.5"/>
          </svg>
        </div>
        <span class="industry-text">Logística</span>
      </button>
      
      <button class="industry-btn" data-industry="automotriz">
        <div class="industry-icon">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M7 17h.01M17 17h.01M3 12h18l-1.5-6H4.5L3 12zM3 12v6a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-6"/>
            <path d="M6 8V4a1 1 0 0 1 1-1h10a1 1 0 0 1 1 1v4"/>
          </svg>
        </div>
        <span class="industry-text">Automotriz</span>
      </button>
      
      <button class="industry-btn" data-industry="edtech">
        <div class="industry-icon">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 10v6M2 10l10-5 10 5-10 5z"/>
            <path d="M6 12v5c3 3 9 3 12 0v-5"/>
          </svg>
        </div>
        <span class="industry-text">EdTech</span>
      </button>
      
      <button class="industry-btn" data-industry="proptech">
        <div class="industry-icon">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"/>
            <polyline points="9,22 9,12 15,12 15,22"/>
          </svg>
        </div>
        <span class="industry-text">PropTech</span>
      </button>
      
      <button class="industry-btn" data-industry="agtech">
        <div class="industry-icon">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 2L2 7l10 5 10-5-10-5z"/>
            <path d="M2 17l10 5 10-5"/>
            <path d="M2 12l10 5 10-5"/>
          </svg>
        </div>
        <span class="industry-text">AgTech</span>
      </button>
      
      <button class="industry-btn" data-industry="insurtech">
        <div class="industry-icon">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/>
            <path d="M9 12l2 2 4-4"/>
          </svg>
        </div>
        <span class="industry-text">InsurTech</span>
      </button>
      
      <button class="industry-btn" data-industry="healthtech">
        <div class="industry-icon">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M22 12h-4l-3 9L9 3l-3 9H2"/>
          </svg>
        </div>
        <span class="industry-text">HealthTech</span>
      </button>
      
      <button class="industry-btn industry-btn-add" data-industry="custom">
        <div class="add-icon">
          <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="12" y1="5" x2="12" y2="19"/>
            <line x1="5" y1="12" x2="19" y2="12"/>
          </svg>
        </div>
        <span class="industry-text">Añade tu industria</span>
      </button>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .goal-evaluation-section {
    padding: 6rem 0;
    background: #fff;
    position: relative;
    overflow: hidden;
  }

  .container {
    max-width: 90%;
    margin: 0 auto;
    padding: 0 2rem;
  }

  @media (min-width: 1400px) {
    .container {
      max-width: 90%;
    }
  }

  .step-indicator {
    font-size: 0.875rem;
    font-weight: 600;
    color: #ef1d27;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1rem;
    text-align: left;
  }

  .evaluation-title {
    font-size: clamp(5rem, 4vw, 3.5rem);
    font-weight: 900;
    text-align: left;
    margin-bottom: 3rem;
    color: #000;
    letter-spacing: -0.08em;
    line-height: 1.1;
  }

  .content-layout {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 5rem;
    align-items: center;
  }

  .description-column {
    display: flex;
    flex-direction: column;
    align-items: flex-start;
    justify-content: flex-start;
    gap: 1.5rem;
  }

  .evaluation-subtitle {
    font-size: clamp(1.5rem, 2vw, 1.8rem);
    font-weight: 400;
    color: #000;
    line-height: 1.4;
    margin: 0;
    text-align: left;
    font-style: italic;
  }

  .evaluation-subtitle strong {
    font-weight: 700;
    font-style: normal;
  }

  .industry-column {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .industry-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 1rem;
    align-items: stretch;
  }


  .industry-btn {
    background: #fff;
    border: 2px solid #000;
    border-radius: 24px;
    padding: 2rem 1.5rem;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    min-height: 120px;
    transition: all 0.3s ease;
    position: relative;
    will-change: transform;
    backface-visibility: hidden;
    cursor: pointer;
    gap: 0.75rem;
  }

  .industry-btn:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .industry-btn:active {
    transform: translateY(0);
  }

  .industry-btn.selected {
    background: #ef1d27;
    border-color: #ef1d27;
    color: #fff;
  }

  .industry-btn.selected .industry-text {
    color: #fff;
  }

  .industry-icon {
    width: 2.5rem;
    height: 2.5rem;
    margin-bottom: 0.5rem;
    transition: transform 0.3s ease;
  }

  .industry-icon svg {
    width: 100%;
    height: 100%;
    stroke: #000;
    transition: stroke 0.3s ease;
  }

  .industry-btn:hover .industry-icon {
    transform: scale(1.1);
  }

  .industry-btn:hover .industry-icon svg {
    stroke: #ef1d27;
  }

  .industry-btn.selected .industry-icon svg {
    stroke: #fff;
  }

  .industry-text {
    font-size: clamp(1rem, 2vw, 1.2rem);
    font-weight: 600;
    color: #ef1d27;
    line-height: 1.3;
  }

  .industry-btn-add {
    background: #333;
    border-color: #333;
    color: #fff;
  }

  .industry-btn-add:hover {
    background: #555;
    border-color: #555;
  }

  .industry-btn-add .industry-text {
    color: #fff;
  }

  .add-icon {
    width: 2rem;
    height: 2rem;
    margin-bottom: 0.5rem;
  }

  .add-icon svg {
    width: 100%;
    height: 100%;
    stroke: #fff;
    stroke-width: 2.5;
  }

  /* Responsive Design */
  @media (max-width: 1023px) {
    .content-layout {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .description-column {
      align-items: center;
      text-align: center;
    }

    .step-indicator {
      text-align: center;
    }

    .evaluation-title {
      text-align: center;
    }

    .evaluation-subtitle {
      text-align: center;
    }

    .industry-grid {
      grid-template-columns: repeat(2, 1fr);
      gap: 1.5rem;
    }
  }

  @media (max-width: 767px) {
    .goal-evaluation-section {
      padding: 4rem 0;
    }

    .industry-grid {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .industry-btn {
      min-height: 100px;
      padding: 1.5rem 1rem;
    }
  }

  @media (max-width: 480px) {
    .goal-evaluation-section {
      padding: 3rem 0;
    }

    .evaluation-title {
      font-size: clamp(1.5rem, 5vw, 2.5rem);
      margin-bottom: 2rem;
    }

    .industry-btn {
      min-height: 80px;
      padding: 1rem 0.75rem;
    }

    .industry-text {
      font-size: clamp(0.8rem, 3vw, 1rem);
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    const industryButtons = document.querySelectorAll('.industry-btn');
    
    industryButtons.forEach(button => {
      button.addEventListener('click', function(this: HTMLButtonElement) {
        // Remove selected class from all buttons
        industryButtons.forEach(btn => btn.classList.remove('selected'));
        
        // Add selected class to clicked button
        this.classList.add('selected');
        
        // Get the industry value
        const industry = this.getAttribute('data-industry');
        
        // Handle custom industry addition
        if (industry === 'custom') {
          const customIndustry = prompt('Ingresa el nombre de tu industria:');
          if (customIndustry && customIndustry.trim()) {
            const textElement = this.querySelector('.industry-text');
            if (textElement) {
              textElement.textContent = customIndustry.trim();
            }
            this.setAttribute('data-industry', customIndustry.toLowerCase().replace(/\s+/g, '-'));
          }
          return;
        }
        
        // Log selection for debugging
        console.log('Selected industry:', industry);
        
        // Here you can add logic to proceed to next step
        // For example: window.location.href = `/evaluation?industry=${industry}`;
      });
    });
  });
</script>
